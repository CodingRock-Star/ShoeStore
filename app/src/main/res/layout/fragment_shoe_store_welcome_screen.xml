<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.navigationscreens.welcome.ShoeStoreWelcomeScreen">
    <!--Used ConstraintLayout since all I wanted to do is display one item after another including button,with
       ConstraintLayout I am position in any place to this view without adding complexity like nested layout .-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen50"
            android:layout_height="wrap_content"
            android:text="@string/welcome_screen_descrpition"
            android:textAlignment="center"
            android:textColor="@color/beige"
            android:textColorHighlight="@color/white"
            android:textSize="@dimen/dimen30"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="217dp" />

        <Button
            android:id="@+id/welcomeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen20"
            android:layout_marginBottom="@dimen/dimen20"
            android:background="@color/colorPrimary"
            android:text="@string/Forword"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>